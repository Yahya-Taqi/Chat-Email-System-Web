@{
    ViewData["Title"] = "Email System";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h4>Email System</h4>
                </div>
                <div class="card-body">
                    <h5 class="mb-3">Compose Email</h5>
                    <div class="input-group mb-3">
                        <span class="input-group-text">Receiver ID:</span>
                        <input type="number" id="receiverId" class="form-control" placeholder="Enter receiver ID">
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text">Message:</span>
                        <textarea id="message" class="form-control" placeholder="Type your message"></textarea>
                    </div>
                    <div class="text-center">
                        <button class="btn btn-success" onclick="sendEmail()">Send Email</button>
                    </div>
                </div>
            </div>

            <div class="card mt-4 shadow-sm border-0">
                <div class="card-header bg-secondary text-white">
                    <h5>Inbox</h5>
                </div>
                <div class="card-body">
                    <ul id="inboxEmails" class="list-group"></ul>
                </div>
            </div>

            <div class="card mt-4 shadow-sm border-0">
                <div class="card-header bg-info text-white">
                    <h5>Sent Emails</h5>
                </div>
                <div class="card-body">
                    <ul id="sentEmails" class="list-group"></ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function sendEmail() {
            var receiverId = document.getElementById("receiverId").value;
            var message = document.getElementById("message").value;

            if (!receiverId || !message) {
                alert("Please fill all fields.");
                return;
            }

            fetch('/Email/SendEmail', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ senderId: 1, receiverId: receiverId, content: message })
            })
            .then(response => response.text())
            .then(data => {
                alert(data);
                loadEmails();
            })
            .catch(error => console.error("Error:", error));
        }

        function loadEmails() {
            fetch('/Email/GetReceivedEmails?userId=1')
                .then(response => response.json())
                .then(data => {
                    let inboxList = document.getElementById("inboxEmails");
                    inboxList.innerHTML = "";
                    data.forEach(email => {
                        inboxList.innerHTML += `<li class="list-group-item">📩 From ${email.senderId}: ${email.content}</li>`;
                    });
                });

            fetch('/Email/GetSentEmails?userId=1')
                .then(response => response.json())
                .then(data => {
                    let sentList = document.getElementById("sentEmails");
                    sentList.innerHTML = "";
                    data.forEach(email => {
                        sentList.innerHTML += `<li class="list-group-item">📤 To ${email.receiverId}: ${email.content}</li>`;
                    });
                });
        }

        document.addEventListener("DOMContentLoaded", loadEmails);
    </script>
}
